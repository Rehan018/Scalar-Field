# =============================================================================
# SEC FILINGS QA AGENT - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Project Repository: https://github.com/Rehan018/Scalar-Field.git
# 
# This is the template file for environment configuration. Copy this file to .env
# and update the values for your specific environment.
# 
# Setup Instructions:
# 1. cp .env.example .env
# 2. Edit .env with your specific values
# 3. Ensure all required API keys are configured
# =============================================================================

# =============================================================================
# API KEYS & AUTHENTICATION
# =============================================================================
# SEC API key from sec-api.io (required for downloading filings)
# Get your free API key at: https://sec-api.io/
SEC_API_KEY=your_sec_api_key_here

# Legacy Gemini API key (optional - system now uses local Ollama)
# GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# LOCAL LLM CONFIGURATION (OLLAMA)
# =============================================================================
# Ollama server URL (change IP/port as needed)
# For local installation: http://localhost:11434
# For remote server: http://your-server-ip:11434
OLLAMA_URL=http://localhost:11434

# Ollama model to use (options: llama3.1:8b, llama3.1:70b, mistral, codellama, etc.)
# Recommended: llama3.1:8b for good balance of speed and quality
OLLAMA_MODEL=llama3.1:8b

# =============================================================================
# LLM GENERATION SETTINGS
# =============================================================================
# Model name for legacy compatibility
LLM_MODEL=llama3.1:8b

# Maximum tokens to generate in responses (1000-4000 recommended)
MAX_TOKENS=2000

# Temperature for response generation (0.0-1.0, lower = more focused)
# 0.1 = very focused, 0.7 = more creative
TEMPERATURE=0.1

# =============================================================================
# DOCUMENT PROCESSING CONFIGURATION
# =============================================================================
# Size of text chunks for processing (in words)
# Smaller chunks = more precise, larger chunks = more context
# Recommended: 800-1500
CHUNK_SIZE=1000

# Overlap between chunks (in words) to maintain context
# Recommended: 10-20% of chunk size
CHUNK_OVERLAP=200

# Maximum concurrent downloads to avoid rate limiting
# Recommended: 3-10 depending on your connection and API limits
MAX_CONCURRENT_DOWNLOADS=5

# =============================================================================
# VECTOR DATABASE & EMBEDDINGS
# =============================================================================
# Path for vector database storage
VECTOR_DB_PATH=./data/vector_db

# ChromaDB persistence directory
CHROMA_PERSIST_DIRECTORY=./data/chroma_db

# Directory for storing embeddings
EMBEDDINGS_DIR=./src/data/embeddings

# Sentence transformer model for embeddings
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, sentence-transformers/all-MiniLM-L12-v2
# all-MiniLM-L6-v2 = fast and good quality (recommended)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# =============================================================================
# SEARCH & RETRIEVAL CONFIGURATION
# =============================================================================
# Minimum similarity threshold for search results (0.0-1.0)
# Lower = more results, higher = more precise results
# Recommended: 0.03-0.1
MIN_SIMILARITY_THRESHOLD=0.05

# Weight for semantic similarity in hybrid search (0.0-1.0)
# Higher = more emphasis on semantic meaning
TFIDF_SEMANTIC_WEIGHT=0.4

# Weight for keyword matching in hybrid search (0.0-1.0)
# Higher = more emphasis on exact keyword matches
# Note: TFIDF_SEMANTIC_WEIGHT + TFIDF_KEYWORD_WEIGHT should equal 1.0
TFIDF_KEYWORD_WEIGHT=0.6

# =============================================================================
# DATA STORAGE PATHS
# =============================================================================
# Main data directory
DATA_DIR=./src/data

# Raw downloaded SEC filings
RAW_DATA_DIR=./src/data/raw

# Processed document data
PROCESSED_DATA_DIR=./src/data/processed

# =============================================================================
# SEC API ENDPOINTS
# =============================================================================
# SEC API base URL (usually no need to change)
SEC_API_BASE_URL=https://api.sec-api.io

# SEC API search endpoint (usually no need to change)
SEC_API_SEARCH_URL=https://api.sec-api.io

# SEC EDGAR base URL (usually no need to change)
SEC_EDGAR_BASE_URL=https://www.sec.gov/edgar

# SEC EDGAR data URL (usually no need to change)
SEC_EDGAR_DATA_URL=https://www.sec.gov/Archives/edgar/data

# SEC forms URL (usually no need to change)
SEC_FORMS_URL=https://www.sec.gov/forms

# =============================================================================
# REQUEST & RETRY CONFIGURATION
# =============================================================================
# HTTP request timeout in seconds
# Increase for slower connections, decrease for faster fail-fast behavior
REQUEST_TIMEOUT=120

# Maximum number of retry attempts for failed requests
# Recommended: 3-5
MAX_RETRIES=3

# Maximum backoff time between retries in seconds
# Prevents excessive waiting on persistent failures
BACKOFF_MAX_TIME=120

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================
# Enable debug logging (true/false)
# Set to true for development, false for production
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
# DEBUG = very verbose, INFO = normal, WARNING = important only, ERROR = errors only
LOG_LEVEL=INFO

# Maximum log file size in MB
# Logs will rotate when this size is reached
MAX_LOG_SIZE=100

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# DEVELOPMENT ENVIRONMENT EXAMPLE:
# OLLAMA_URL=http://localhost:11434
# MAX_CONCURRENT_DOWNLOADS=3
# MIN_SIMILARITY_THRESHOLD=0.03
# DEBUG_MODE=true
# LOG_LEVEL=DEBUG

# PRODUCTION ENVIRONMENT EXAMPLE:
# OLLAMA_URL=http://production-llm-server:11434
# MAX_CONCURRENT_DOWNLOADS=10
# MIN_SIMILARITY_THRESHOLD=0.1
# DEBUG_MODE=false
# LOG_LEVEL=INFO

# HIGH-PERFORMANCE SETUP EXAMPLE:
# OLLAMA_MODEL=llama3.1:70b
# CHUNK_SIZE=1500
# CHUNK_OVERLAP=300
# MAX_TOKENS=4000
# EMBEDDING_MODEL=all-mpnet-base-v2